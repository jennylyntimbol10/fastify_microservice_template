				{
					"name": "Create new Product",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Successful POST request\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
									"});",
									"",
									"// Test to check if all the details from the json payload exist and have the proper types",
									"pm.test(\"Item details have the proper types and values\", function () {",
									"    var itemDetails = pm.response.json().productInformation;",
									"    pm.expect(itemDetails).to.be.an('object');",
									"    pm.expect(itemDetails).to.have.property('itemName').that.is.a('string');",
									"    pm.expect(itemDetails).to.have.property('stock').that.is.a('number');",
									"    pm.expect(itemDetails).to.have.property('unitPrice').that.is.a('number');",
									"    pm.expect(itemDetails).to.have.property('isActive').that.is.a('boolean');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"name\": \"Staple Remover C\",\n    \"isActive\": true,\n    \"stock\": 10,\n    \"unitPrice\": 50.0,\n    \"brandId\": 1,\n    \"categoryId\": 1\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/products/create",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"products",
								"create"
							]
						},
						"description": "This is a POST request, submitting data to an API via the request body. This request submits JSON data, and the data is reflected in the response.\n\nA successful POST request typically returns a `200 OK` or `201 Created` response code."
					},
